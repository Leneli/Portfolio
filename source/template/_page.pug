//- default variables
- var bottomBg = ""
- var headerSubClass = "header__content_about"

//- variables on the page
block variables

//-include mixins
include ./helpers/userpic
include ./helpers/skill-ring
include ./blocks/meta
include ./blocks/socials
include ./blocks/arrow-down
include ./blocks/traingle
include ./blocks/menu
include ./blocks/article
include ./blocks/skills


//- template

doctype html
html(lang="ru-RU")
	head
		title #{title}
		+meta(metaData)

	body
		include ./blocks/main-menu

		div(class=`wrapper ${bottomBg}`)
			.content.content_page
				header.header.bg_forest-full
					
					block header-nav
						.header__nav
							+socials(socials, "svg_white-green")
							+arrowDown("arrow_head")
							include ./blocks/hamburger

					div(class=`header__content ${headerSubClass}`)
						block header-content
							include ./blocks/user-head

					+traingle(leftTraingleClass, rightTraingleClass)

				main.main
					block content


			footer.footer
				.footer__main

					.footer__col
						p Этот сайт я сделала в рамках обучения в Школе онлайн образования LoftSchool.

					.footer__col
						+menu(menu, "menu__item", "menu_footer")
						+socials(socials, "svg_white-opacity")

					.footer__col
						.quote-footer
							p.quote__text Всегда пишите код так, будто сопровождать его будет склонный к насилию психопат, который знает, где вы живете.
							p.quote__author.quote_d Martin Golding

				.footer__copyright © Елена Куклина | Создано с любовью в LoftSchool | 2017