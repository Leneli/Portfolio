mixin formIndex(className)
	div(class=`form form_dark ${className}`)
		.form__content
			include ../blocks/user-head
			.socials_topm 
				+socials(socials, "svg_white-green-opacity")
		+menu(menuIndex, "form__btn", "form__buttons")


mixin formLogin(className)
	div(class=`form form_dark ${className}`)
		.form__content
			span.subtitle Авторизуйтесь
			form.login-form
				.input.input_login
					input(type="text" placeholder="Логин").input_hidden
					//-input(type="text" placeholder="Логин").input.input_login
				.input.input_passw
					input(type="password" placeholder="Пароль").input_hidden
					//-input(type="password" placeholder="Пароль").input.input_passw

				.form__captcha
					+check("checkbox", "checkbox-name", "id1", "Я человек")

					p.p-mrg Вы точно не робот?

					div.form__captcha_radio
						+check("radio", "radio-name", "id2", "Да")
						+check("radio", "radio-name", "id3", "Не уверен")

		.form__buttons
			a(class="form__btn" href="/") На главную
			a.form__btn Войти