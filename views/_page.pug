//- default variables
- var headerClass = "bg_forest-full"
- var headerSubClass = "header__content_about"

//- variables on the page
block variables

//-include mixins
include ./helpers/userpic
include ./helpers/skill-ring
include ./helpers/inputs
include ./blocks/meta
include ./blocks/socials
include ./blocks/arrow-down
include ./blocks/traingle
include ./blocks/menu
include ./blocks/article
include ./blocks/skills
include ./blocks/forms


//- template

doctype html
html(lang="ru-RU")
	head
		meta(charset="utf-8")
		title #{title}
		meta(content="" name="author")
		meta(content="" name="description")
		meta(content="" name="keywords")
		meta(content="width=device-width, initial-scale=1" name="viewport")
		meta(content="ie=edge" http-equiv="x-ua-compatible")

		//- favicon block start
		//- favicon block end
		link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css")
		link(rel="stylesheet" href=`/assets/css/foundation${suffix}.css${version}`)
		link(rel="stylesheet" href=`/assets/css/app${suffix}.css${version}`)

		script(src=`/assets/js/foundation${suffix}.js${version}` defer)
		script(src=`/assets/js/app${suffix}.js${version}` defer)

		<!--[if lt IE 9]>
		script(src="http://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js")
		script(src="http://cdnjs.cloudflare.com/ajax/libs/respond.js/1.4.2/respond.min.js")
		<![endif]-->

	body
		include ./blocks/preloader
		include ./blocks/main-menu

		.wrapper
			.content.content_page
				header(class=`header ${headerClass}`)
					
					block header-nav
						.header__nav
							+socials(socials, "svg_white-green")
							+arrow("#", "svg_white-opacity")(class="arrow_down arrow_head")
							include ./blocks/hamburger

					div(class=`header__content ${headerSubClass}`)
						block header-content
							include ./blocks/user-head

					+traingle(leftTraingleClass, rightTraingleClass)

				main.main
					block content

			block picture


			footer.footer
				.footer__col.footer__col_border
					p Этот сайт я сделала в рамках обучения в Школе онлайн образования LoftSchool.

				.footer__col.footer__col_border
					+menu(menu, "menu__item", "menu_footer")
					+socials(socials, "svg_white-opacity")

				.footer__col_big
					.quote-footer
						p.quote__text Всегда пишите код так, будто сопровождать его будет склонный к насилию психопат, который знает, где вы живете.
						p.quote__author.quote_d Martin Golding

				.footer__copyright.footer__col_green © Елена Куклина | Создано с любовью в LoftSchool | 2017

		block scripts